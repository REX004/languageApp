<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h5_text">
        <item name="android:fontFamily">@font/fredoka_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">28dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="h6_text">
        <item name="android:fontFamily">@font/fredoka_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="body_text">
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight">20dp</item>
        <item name="android:textColor">@color/opacity_dark</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="button">
        <item name="android:fontFamily">@font/fredoka_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:lineHeight">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

</resources>